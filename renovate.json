{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "rebaseWhen": "conflicted",
  "dependencyDashboard": true,
  "labels": ["dependencies"],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["^.*docker-compose\\.json$"],
      "matchStrings": [
        "\"image\":\\s*\"(?<depName>[\\w.-]+):(?<currentValue>[\\w.-]+)\""
      ],
      "datasourceTemplate": "docker"
    }
  ],
  "packageRules": [
    {
      "matchDatasources": ["docker"],
      "automerge": true
    },
    {
      "matchPackagePatterns": [
        "^[v]?(?P<major>0|[1-9]\\d*)\\.(?P<minor>0|[1-9]\\d*)\\.(?P<patch>0|[1-9]\\d*)(?:-(?P<prerelease>(?:0|[1-9]\\d*|\\d*[a-zA-Z-][0-9a-zA-Z-]*)(?:\\.(?:0|[1-9]\\d*|\\d*[a-zA-Z-][0-9a-zA-Z-]*))*))?(?:\\+(?P<buildmetadata>[0-9a-zA-Z-]+(?:\\.[0-9a-zA-Z-]+)*))?$"
      ],
      "autoMerge": true
    },
    {
      "matchUpdateTypes": ["major"],
      "automerge": false
    },
    {
      "matchPackageNames": [
        "mysql",
        "mariadb",
        "mongodb",
        "mongo",
        "postgres",
        "redis",
        "clickhouse-server",
        "clickhouse",
        "couchdb-server",
        "documentserver"
      ],
      "enabled": false
    },
    {
      "matchPackageNames": ["immich-*"],
      "automerge": false
    }
  ],
  "postUpgradeTasks": {
    "commands": [
      "bun .github/scripts/update.ts {{packageFile}} {{newVersion}}"
    ],
    "fileFilters": ["**/**"],
    "executionMode": "update"
  }
}
