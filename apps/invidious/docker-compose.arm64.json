{
  "$schema": "../docker-compose-schema.json",
  "services": [
    {
      "name": "invidious",
      "image": "quay.io/invidious/invidious:2024.04.26-eda7444-arm64",
      "internalPort": 3000,
      "isMain": true,
      "environment": {
        "INVIDIOUS_CONFIG": "{db: {dbname: invidious, user: tipi, password: '${INVIDIOUS_DB_PASSWORD}', host: invidious-db, port: 5432, check_tables: true, hmac_key: '${INVIDIOUS_HMAC_KEY}'}}"
      },
      "dependsOn": {
        "invidious-db": {
          "condition": "service_started"
        }
      }
    },
    {
      "name": "invidious-db",
      "image": "postgres:14",
      "volumes": [
        {
          "containerPath": "/var/lib/postgresql/data",
          "hostPath": "${APP_DATA_DIR}/data/db"
        },
        {
          "containerPath": "/config/sql",
          "hostPath": "${APP_DATA_DIR}/data/config/sql"
        },
        {
          "containerPath": "/docker-entrypoint-initdb.d/init-invidious-db.sh",
          "hostPath": "${APP_DATA_DIR}/docker/init-invidious-db.sh"
        }
      ],
      "environment": {
        "POSTGRES_DB": "invidious",
        "POSTGRES_USER": "tipi",
        "POSTGRES_PASSWORD": "${INVIDIOUS_DB_PASSWORD}"
      }
    }
  ]
}
